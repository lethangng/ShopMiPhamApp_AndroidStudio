<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login.RegiterActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/signimg"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/username"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Email"
                android:inputType="text"
                android:textColor="@color/lavender"
                android:textColorHint="@color/gray"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:background="@drawable/edit_text_bg"/>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:id="@+id/password"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Mật khẩu"
                    android:textColor="@color/lavender"
                    android:inputType="textPassword"
                    android:textColorHint="@color/gray"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="8dp"
                    android:background="@drawable/edit_text_bg"/>

                <ImageButton
                    android:id="@+id/ibtn_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_alignBottom="@id/password"
                    android:layout_alignEnd="@id/password"
                    android:layout_alignTop="@id/password"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_eye2" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:id="@+id/confirm_password"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Nhập lại mật khẩu"
                    android:textColor="@color/lavender"
                    android:inputType="textPassword"
                    android:textColorHint="@color/gray"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="8dp"
                    android:background="@drawable/edit_text_bg"/>

                <ImageButton
                    android:id="@+id/ibtn_eye_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_alignBottom="@id/confirm_password"
                    android:layout_alignEnd="@id/confirm_password"
                    android:layout_alignTop="@id/confirm_password"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_eye2" />
            </RelativeLayout>
<!--            <EditText-->
<!--                android:layout_width="300dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:id="@+id/password"-->
<!--                android:textColor="@color/lavender"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:padding="8dp"-->
<!--                android:hint="Mật khẩu"-->
<!--                android:inputType="textPassword"-->
<!--                android:textColorHint="@color/gray"-->
<!--                android:drawableLeft="@drawable/baseline_lock_24"-->
<!--                android:drawablePadding="8dp"-->
<!--                android:background="@drawable/edit_text_bg"/>-->


            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/name"
                android:textColor="@color/lavender"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Họ tên"
                android:inputType="text"
                android:textColorHint="@color/gray"
                android:drawableLeft="@drawable/ic_user"
                android:drawablePadding="8dp"
                android:background="@drawable/edit_text_bg"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/phone_number"
                android:textColor="@color/lavender"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:textColorHint="@color/gray"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:background="@drawable/edit_text_bg"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/address"
                android:textColor="@color/lavender"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Địa chỉ"
                android:inputType="phone"
                android:textColorHint="@color/gray"
                android:drawableLeft="@drawable/ic_address"
                android:drawablePadding="8dp"
                android:background="@drawable/edit_text_bg"/>

            <RadioGroup
                android:id="@+id/rdo_group"
                android:layout_marginTop="20dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/lavender"
                    android:text="Giới tính: "/>

                <RadioButton
                    android:id="@+id/rdo_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lavender"
                    android:checked="true"
                    android:text="Nam" />

                <RadioButton
                    android:id="@+id/rdo_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lavender"
                    android:text="Nữ" />

            </RadioGroup>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/btnRegiter"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:text="Đăng ký"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:cornerRadius="30dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="57dp"
                    android:indeterminate="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>